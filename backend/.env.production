# CONFIGURACIÓN DE PRODUCCIÓN
# Copia este archivo y renómbralo a .env en tu servidor de producción

PORT=5001
NODE_ENV=production

# MongoDB Atlas - USA TU URI REAL
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/fitness-app?retryWrites=true&w=majority

# JWT Secret - GENERA UNO NUEVO CON: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERA_UN_SECRET_SEGURO_AQUI

# CORS - Cambia por tu dominio de frontend
CORS_ORIGIN=https://tu-dominio-frontend.com

# MongoDB Atlas Configuration
DB_NAME=fitness-app
DB_USER=tu_usuario
DB_CLUSTER=tu_cluster.mongodb.net

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Production
DEBUG=false
